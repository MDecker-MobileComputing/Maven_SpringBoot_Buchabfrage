<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender for LoadBalancer logs -->
    <appender name="LOAD_BALANCER_FILE" class="ch.qos.logback.core.FileAppender">
        <file>LoadBalancer.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="info">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Logger for org.springframework.cloud.client.loadbalancer -->
    <logger name="org.springframework.cloud.client.loadbalancer" level="debug" additivity="false">
        <appender-ref ref="LOAD_BALANCER_FILE" />
    </logger>
</configuration>