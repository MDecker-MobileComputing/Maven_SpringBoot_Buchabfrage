<configuration>

    <!-- Ein Appender ist ein Ziel f端r Log-Nachrichten, z.B. die Konsole, eine Datei
         oder ein externes System -->

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Platzhalterwert f端r Dateiname erzeugen -->
    <timestamp key="startsekunde" datePattern="yyyy-MM-dd_HH.mm.ss"/>

    <!-- Appender nur f端r Datei mit Log-Nachrichten vom Load-Balancer -->
    <appender name="LOAD_BALANCER_DATEI_LOG" class="ch.qos.logback.core.FileAppender">
        <file>LoadBalancer-${startsekunde}.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
		<filter class="de.eldecker.spring.buchabfrage.restclient.LogFileFilter" />
    </appender>

    <!--
        https://betterstack.com/community/questions/send-spring-boot-logs-directly-to-logstash-with-no-file/
    -->
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">e
        <destination>localhost:5044</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <providers>
                <timestamp />
                <logger />
                <thread />
                <level />
                <message />
                <logstashMarkers />
                <arguments />
                <mdc /><!-- Mapped Diagnostic Context -->
                <context />
            </providers>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Logger f端r Paket org.springframework.cloud.client.loadbalancer -->
    <logger name="org.springframework.cloud.client.loadbalancer" level="debug" additivity="false">
        <appender-ref ref="LOAD_BALANCER_DATEI_LOG" />
    </logger>

</configuration>